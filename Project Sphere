import time
print("This app will calculate the surface area and volume of any Sphere")
R=float(input("Radius-"))
P=22/7
time.sleep(1)
print("Volume-"+str(4/3*(P*R**3)))
time.sleep(1)
print("Total Surface Area-"+str(4*P*R**2))
time.sleep(1)


